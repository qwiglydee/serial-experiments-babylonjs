{
  "compilerOptions": {
    "target": "es2021",
    "module": "es2020",
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./build",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": []
}